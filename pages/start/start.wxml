<!--start.wxml-->
<view class="container" style="background-image: url('../../images/ad/bg.jpg');background-repeat:no-repeat; background-size:100% 100%;-moz-background-size:100% 100%">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/more/loading.gif"></image>
  </view>
  <block wx:else>
     <!-- <image class="title" src="/images/ad/pzlogo.png"></image>  -->
     <!-- <view style='color: white; font-size:18px;'>
        Welcome to puzhen
     </view> -->
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <!-- <image class="logo" src="{{userInfo.avatarUrl}}"></image> -->
        <image class="wave" src="/images/more/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/images/more/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
         <!-- <image class="smalltitle" src="/images/ad/pzlogo.png"></image> -->
        <view type="primary" class="confirm-btn" bindtap='goToIndex'>
          <text >预约试听课</text>
        </view>
      </view>
    </view>
  </block>
</view>