<view class="container">
    <form bindsubmit="bindSave">
    <view class="form-box">
        <view class="row-wrap">
            <view class="label">姓名</view>
            <view class="label-right">
                <input name="linkMan" class="input" type="text" placeholder="请输入姓名"/>
            </view>
        </view>
        <view class="row-wrap">
            <view class="label">性别</view>
            <view class="label-right">
                <checkbox-group bindchange="kidSexSelectionChange">
                  <wx:key class="checkbox" wx:for="{{sexLabels}}">
                      <checkbox value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
                  </wx:key>
                </checkbox-group>
            </view>
        </view>
        <!-- <view class="row-wrap">
            <view class="label">宝贝年龄</view>
            <view class="label-right">
                <input name="linkMan" class="input" type="text" placeholder="请输入宝贝的年龄"/>
            </view>
        </view> -->
        <view class="row-wrap">
            <view class="label">手机号码</view>
            <view class="label-right">
                <input name="mobile" class="input" maxlength="11" type="number" placeholder="请输入手机号"/>
            </view>
        </view>
        <view class='row-wrap'>
          <view class='label'>感兴趣的课程</view>
          <view class='label-right'>
            <checkbox-group bindchange="kidSexSelectionChange">
                  <wx:key class="checkbox" wx:for="{{allCourses}}">
                      <checkbox value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
                  </wx:key>
                </checkbox-group>
          </view>
        </view>
    </view>
    <button type="primary" class="save-btn" bindtap="readFromWx">提交预约</button>
    </form>
</view>